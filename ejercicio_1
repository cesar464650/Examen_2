#include<stdio.h>
#include<conio.h>

int main(){
	int i, c=10;
	int numeros[c]={0};
	float m=0, sum;
	
	i=1;
	printf("Digitara numeros enteros y se calculara la media\n");
	printf("\n");
	for(i=1;i<c+1;i++){
		printf("Numero %i: ", i);
		scanf("%d", &numeros[i]);
		sum=sum+numeros[i];
	}
	
	m=sum/c;
	printf("La media es %.2f", m);
	
	getch();
	return 0;
}
